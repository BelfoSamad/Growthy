{
  "name": "Youtube Extension Prototype",
  "version": "1.0",
  "description": "Trying.. lol",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "activeTab",
    "http://www.youtube.com/watch?v=*",
    "https://www.youtube.com/watch?v=*"
  ],
  "browser_action": {
    "default_title": "Youtube Extension"
  },
  "background": {
    "scripts": [
      "firebase/firebase-app.js",
      "firebase/firebase-analytics.js",
      "firebase/firebase-storage.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://www.googletagmanager.com; object-src 'self'"
}